<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_bubble_out" >

        <TextView
            android:id="@+id/chat_sound_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_feedback_holo_light_round_white_36dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_play_circle_outline_white_24dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:minHeight="36dp"
            android:minWidth="48dp"
            android:paddingLeft="8dp"
            android:paddingRight="24dp"
            android:text="13&apos;&apos;"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <com.qpidnetwork.ladydating.customized.view.MaterialProgressBar
        android:id="@+id/pbDownload"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        app:matProg_barColor="@color/blue_color"
        app:matProg_progressIndeterminate="true" />

    <ImageButton
        android:id="@+id/btnError"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="0dp"
        android:background="@drawable/touch_feedback_holo_light_round_rectangle"
        android:src="@drawable/ic_error_grey600_24dp"
        android:visibility="gone" />

</LinearLayout>