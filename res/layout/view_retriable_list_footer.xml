<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="72dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/loadMoreView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_holo_light_round_angle"
            android:padding="8dp"
            android:text="@string/loading"
            android:textColor="@color/text_color_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ProgressBar
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <com.qpidnetwork.ladydating.customized.view.MaterialRaisedButton
        android:id="@+id/btnRetryLoadMore"
        style="@style/Button.BlueButton" />

    <TextView
        android:id="@+id/noMoreItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_more_items"
        android:textColor="@color/text_color_dark"
        android:textSize="18sp" />

</LinearLayout>