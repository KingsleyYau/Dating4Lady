<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center" >
    

    <TextView android:id="@+id/category"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/text_color_dark"
        android:textSize="18sp"
        android:padding="8dp"
        android:drawableRight="@drawable/ic_expand_more_grey600_24dp"
        android:drawableEnd="@drawable/ic_expand_more_grey600_24dp"
        android:text="@string/online"
        android:textStyle="bold"
        android:background="@drawable/touch_holo_light_round_angle"/>
    
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/listview_divider_grey"/>
    
    
</LinearLayout>
